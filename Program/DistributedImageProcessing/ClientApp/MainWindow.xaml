<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.ViewModels"
        mc:Ignorable="d"
        Title="Distributed Image Processing - Batch Client" Height="900" Width="1400">
    <Window.DataContext>
        <local:ClientViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Выбрать изображения" Command="{Binding SelectImagesCommand}" 
                        Margin="5" Padding="15,8" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button Content="Отправить все" Command="{Binding SendAllCommand}" 
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                        Margin="5" Padding="15,8" Background="#2196F3" Foreground="White" FontWeight="Bold"/>
                <Button Content="Очистить" Command="{Binding ClearCommand}" 
                        Margin="5" Padding="15,8" Background="#F44336" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Список изображений -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Images}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="10" Padding="10" Background="#FAFAFA">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Оригинал" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="{Binding Original}" Stretch="Uniform" Height="360" Margin="5"/>
                                    <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Результат" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="{Binding Processed}" Stretch="Uniform" Height="360" Margin="5"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="{Binding Status}" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Прогресс -->
        <Border Grid.Row="2" Background="#333" Padding="10">
            <TextBlock Text="{Binding ProgressText}" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>